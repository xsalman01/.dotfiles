###################
### SWAY CONFIG ###
###################

### Output configuration
# Default wallpaper
output * bg ~/.dotfiles/wallpapers/leafy.png fill

output HDMI-A-1 pos 0 0
### LAPTOP START ###
# output eDP-1
### LAPTOP END ###

### DESKTOP START ###
output DVI-I-1 mode 1600x900@59.01600 pos 1920x90
### DESKTOP END ###


##### Variables #######
# Mods. Use Mod1 for Alt.
set $super Mod4
set $mod Mod1

# Home row direction keys, like vim
set $left Left
set $down Down
set $up Up
set $right Right

# Set programs that you use
set $term uwsm app -- kitty
set $zen uwsm app -- zen-browser
set $helium uwsm app -- helium-browser
set $slack uwsm app -- slack --gtk-version=3 -s
set $discord uwsm app -- discord
set $spotify uwsm app -- spotify
set $vscode uwsm app -- code
set $stremio uwsm app -- stremio-enhanced
set $menu rofi -show drun -run-command "uwsm app -- {cmd}"

#### Resizing containers ####
mode "resize" {
    bindsym h resize shrink width 10px
        bindsym j resize grow height 10px
        bindsym k resize shrink height 10px
        bindsym l resize grow width 10px

# Return to default mode
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $super+r mode "default"
}
bindsym $super+r mode "resize"

### Idle configuration ###
exec swayidle -w \
         timeout 300 'swaylock -f -c 000000' \
         timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep 'swaylock -f -c 000000'

### Input configuration ###
input type:touchpad {
    dwt enabled
        tap enabled
        natural_scroll enabled
        middle_emulation enabled
        pointer_accel 0.7
}

input type:pointer {
    natural_scroll disable
        accel_profile flat
        middle_emulation enabled
        pointer_accel 1
}

input "razer-razer-basilisk-v3" {
    pointer_accel -0.8
}

input "razer-razer-basilisk-v3-2" {
    pointer_accel -0.8
}

include ./modules/*
include /etc/sway/config.d/*
